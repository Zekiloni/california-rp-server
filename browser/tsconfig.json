{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"allowJs": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"baseUrl": "./",
		"types": [
			"webpack-env",
			"./types",
			"./node_modules/@ragempcommunity/types-cef/"
		],
		"paths": {
			"@/*": ["src/*"],
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"../Shared/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
